---
import Layout from '../../components/layout/Layout.astro';
import RepositoryCard from '../../components/cards/RepositoryCard.astro';
import repositories from '../../data/repositories.json';

export async function getStaticPaths() {
  return [
    { params: { stack: 'python' }, props: { stackName: 'Python' } },
    { params: { stack: 'typescript' }, props: { stackName: 'TypeScript' } },
  ];
}

const { stackName } = Astro.props;
const stackRepos = repositories.filter(r => r.techStack === stackName);
const baseUrl = import.meta.env.BASE_URL || '/';
---

<Layout title={`${stackName} Repositories`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumbs -->
    <nav class="text-sm text-gray-600 mb-6">
      <a href={baseUrl} class="hover:text-algo-primary">Home</a>
      <span class="mx-2">/</span>
      <a href={`${baseUrl}tech-stack/`} class="hover:text-algo-primary">Tech Stack</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">{stackName}</span>
    </nav>

    <!-- Stack Header -->
    <div class={`border-2 rounded-lg p-8 mb-8 ${
      stackName === 'Python'
        ? 'bg-blue-50 border-blue-200'
        : 'bg-green-50 border-green-200'
    }`}>
      <h1 class="text-3xl font-bold text-gray-900 mb-3">{stackName} Repositories</h1>
      <div class="text-sm text-gray-600">
        {stackRepos.length} {stackRepos.length === 1 ? 'repository' : 'repositories'}
      </div>
    </div>

    <!-- Repositories -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {stackRepos.map(repo => (
        <RepositoryCard repo={repo} />
      ))}
    </div>
  </div>
</Layout>

<style>
  .text-algo-primary {
    color: #00D2B8;
  }
</style>
