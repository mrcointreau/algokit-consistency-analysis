---
import Layout from '../../components/layout/Layout.astro';
import RepositoryCard from '../../components/cards/RepositoryCard.astro';
import categories from '../../data/categories.json';
import repositories from '../../data/repositories.json';

export async function getStaticPaths() {
  return categories.map(category => ({
    params: { category: category.slug },
    props: { category },
  }));
}

const { category } = Astro.props;
const categoryRepos = repositories.filter(r => r.category === category.slug);
const baseUrl = import.meta.env.BASE_URL || '/';
---

<Layout title={`${category.name} - Categories`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumbs -->
    <nav class="text-sm text-gray-600 mb-6">
      <a href={baseUrl} class="hover:text-algo-primary">Home</a>
      <span class="mx-2">/</span>
      <a href={`${baseUrl}categories/`} class="hover:text-algo-primary">Categories</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">{category.name}</span>
    </nav>

    <!-- Category Header -->
    <div class="bg-white border border-gray-200 rounded-lg p-8 mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-3">{category.name}</h1>
      <p class="text-lg text-gray-600 mb-4">{category.description}</p>
      <div class="text-sm text-gray-500">
        {categoryRepos.length} {categoryRepos.length === 1 ? 'repository' : 'repositories'}
      </div>
    </div>

    <!-- Repositories in Category -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {categoryRepos.map(repo => (
        <RepositoryCard repo={repo} />
      ))}
    </div>
  </div>
</Layout>

<style>
  .text-algo-primary {
    color: #00D2B8;
  }
</style>
