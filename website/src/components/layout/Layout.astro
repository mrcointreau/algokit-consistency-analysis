---
import '../../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'AlgoKit Repository Analysis - Comprehensive analysis of 17 AlgoKit repositories' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-white border-b border-gray-200 sticky top-0 z-10">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center space-x-8">
            <a href={baseUrl} class="text-xl font-bold text-gray-900 hover:text-algo-primary transition">
              AlgoKit Analysis
            </a>
            <div class="hidden md:flex space-x-6">
              <a href={`${baseUrl}categories/`} class="text-gray-600 hover:text-gray-900 transition">
                Categories
              </a>
              <a href={`${baseUrl}tech-stack/`} class="text-gray-600 hover:text-gray-900 transition">
                Tech Stack
              </a>
            </div>
          </div>
          <a
            href="https://github.com/mrcointreau/algokit-consistency-analysis"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-gray-900 transition"
          >
            GitHub
          </a>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center text-gray-600 text-sm">
          <p>AlgoKit Repository Analysis</p>
          <p class="mt-1">Comprehensive consistency analysis of the AlgoKit ecosystem</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  .algo-primary {
    color: #00D2B8;
  }
</style>
