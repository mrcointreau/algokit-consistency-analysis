---
interface Props {
  repo: {
    name: string;
    slug: string;
    categoryName: string;
    techStack: string;
    purpose: string;
  };
}

const { repo } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';

const techStackColor = repo.techStack === 'Python' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800';
---

<a
  href={`${baseUrl}repositories/${repo.slug}/`}
  class="block p-5 bg-white border border-gray-200 rounded-lg hover:shadow-md transition-shadow duration-200"
>
  <div class="flex items-start justify-between mb-2">
    <h3 class="text-base font-semibold text-gray-900 font-mono">{repo.name}</h3>
    <span class={`px-2 py-1 text-xs font-medium rounded ${techStackColor}`}>
      {repo.techStack}
    </span>
  </div>
  <p class="text-sm text-gray-600 mb-2">{repo.purpose}</p>
  <p class="text-xs text-gray-500">{repo.categoryName}</p>
</a>
